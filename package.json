{
  "name": "auto-changelog-workflow",
  "version": "1.1.0",
  "description": "Automated changelog and version management workflow",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:workflow": "jest --testPathPattern=workflow",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "validate-workflow": "actionlint .github/workflows/auto-changelog.yml",
    "prepare": "husky install"
  },
  "keywords": [
    "changelog",
    "versioning",
    "automation",
    "github-actions",
    "ci-cdd"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/config-conventional": "^19.0.0",
    "@types/jest": "^29.5.8",
    "actionlint": "^2.0.6",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.2",
    "supertest": "^7.1.1"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!jest.config.js",
      "!knexfile.js",
      "!migrations/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 0,
        "lines": 50,
        "statements": 50
      }
    },
    "testMatch": [
      "**/__tests__/**/*.test.js",
      "**/?(*.)+(spec|test).js"
    ]
  },
  "eslintConfig": {
    "extends": [
      "standard"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "semi": [
        "error",
        "always"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "no-console": "warn",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "express": "^5.1.0",
    "knex": "^3.1.0",
    "pg": "^8.16.3"
  }
}
